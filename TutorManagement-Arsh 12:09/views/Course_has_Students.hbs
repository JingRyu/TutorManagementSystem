    https://github.com/osu-cs340-ecampus/nodejs-starter-app/tree/main/Step%208%20-%20Dynamically%20Updating%20Data --}}
    <form id="update-courses-has-students-form-ajax">
        <fieldset style="width:1000px">
            <legend><strong>Update Courses-has-Students Record</strong></legend>
            Tutor:
            <select name="input-course" id="course-courseStudent-update">
                <option value="">Select a Course</option>
                {{#each courses}}
                <option value="{{this.courseID}}">{{this.courseName}}</option>
                {{/each}}
            </select>

            Student:
            <select name="input-student" id="student-courseStudent-update">
                <option value="">Select a Student</option>
                {{#each students}}
                <option value="{{this.studentID}}">{{this.studentName}}</option>
                {{/each}}
            </select>

            <label for="completedClassHoursInput">Completed Class Hours: </label>
            <input type="number" name="completedClassHoursInput" id="completedClassHoursInput-update" step="0.1">

            <input type="submit">
        </fieldset>

        <p></p>

    </form>

    <script src="./js/update_courses_has_students.js"></script>



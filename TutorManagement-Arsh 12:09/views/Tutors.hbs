{{!-- Create a table --}}
<body>
<table id="tutor-table">
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Phone Number</th>
          <th>Tutor Experience (years)</th>
          <th>Revenue Generated ($)</th>
          <th>Average Student Satisfaction (1-5)</th>
          <th>Average Student Grade Improvement</th>
        </tr>

        {{!-- For each row, print in order --}}
        {{#each data}}
        <tr data-value={{this.tutorID}}> {{!-- Relates to this id for each Tutor data --}}
            <td>{{this.tutorID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.phoneNum}}</td>
            <td>{{this.tutorExperience}}</td>
            <td>{{this.revenueGenerated}}</td>
            <td>{{this.averageStudentSatisfaction}}</td>
            <td>{{this.averageStudentGradeImprovement}}</td>
            <td><button onclick="deleteTutor({{this.tutorID}})">Delete</button></td>
        </tr>
        {{/each}}
</table>
<script src="/js/delete_tutor.js"></script>

{{!-- Form to add a record to the table using AJAX --}}
<p>&nbsp;</p>
<p>To add a new Tutor, please enter their information below and click 'Submit'!</p>
<form  id="add-tutor-form-ajax">

    <label for="input-fname">First Name: </label>
    <input type="text" name="input-fname" id="input-fname">
    
    <label for="input-lname">Last Name: </label>
    <input type="text" name="input-lname" id="input-lname">

    <label for="input-number">Phone Number: </label>
    <input type="tel" name="input-number" id="input-number">

    <label for="input-experience">Experience: </label>
    <input type="number" name="input-experience" id="input-experience">

    <label for="input-revenue">Revenue Generated: </label>
    <input type="number" name="input-revenue" id="input-revenue">

    <label for="input-rating">Student Rating: </label>
    <input type="number" name="input-rating" id="input-rating" step="0.01" min="1" max="5">

    <label for="input-grade">Grade Improvement: </label>
    <input type="number" name="input-grade" id="input-grade" step="0.01" min="0" max="1.00">

    <input type="submit">
</form>
{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="/js/add_tutor.js"></script>

